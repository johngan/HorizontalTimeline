<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:weightSum="2">
            <View
                android:id="@+id/timeline_line_left"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/timeline_line_black"
                android:layout_weight="1">
            </View>

            <View
                android:id="@+id/timeline_line_right"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/timeline_line_black"
                android:layout_weight="1">
            </View>
        </LinearLayout>

        <View
            android:id="@+id/timeline_circle"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/timeline_circle_black">
        </View>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        android:text="asdfsafs"
        android:background="@color/light_orange"
        android:gravity="center_horizontal|center_vertical"/>
</LinearLayout>

